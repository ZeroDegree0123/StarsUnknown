model Constellation {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  stars       Star[]
  distance    Int
}

model Star {
  id            Int           @id @default(autoincrement())
  starId        Int
  name          String
  description   String?
  distance      Int
  size          Int
  type          String
  constellation Constellation @relation(fields: [starId], references: [id])
  planets       Planet[]
}

model Planet {
  id          Int     @id @default(autoincrement())
  planetId    Int
  name        String
  description String?
  distance    Int
  size        Int
  type        String
  moons       String
  star        Star    @relation(fields: [planetId], references: [id])
}

model SpaceCraft {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  nation      String
  yearBuilt   Int
  crew        String?
}

model Astronaut {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  nation      String
  missions    String
}
