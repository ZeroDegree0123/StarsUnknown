// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Constellation {
  id          Int     @id @default(autoincrement())
  image       String?
  name        String  @unique
  description String? @db.VarChar(1500)
  stars       Star[]
}

model Star {
  id                Int            @id @default(autoincrement())
  constellationName String?
  name              String         @unique
  image             String?
  description       String?        @db.VarChar(1500)
  distance          String
  size              String
  type              String
  constellation     Constellation? @relation(fields: [constellationName], references: [name])
  planets           Planet[]
}

model Planet {
  id          Int     @id @default(autoincrement())
  starName    String?
  image       String?
  name        String
  description String? @db.VarChar(1500)
  distance    String
  size        String
  type        String
  moons       String
  star        Star?   @relation(fields: [starName], references: [name])
}

model SpaceCraft {
  id          Int     @id @default(autoincrement())
  name        String
  image       String?
  description String? @db.VarChar(1500)
  nation      String
  yearBuilt   String
  crew        String?
}

model Astronaut {
  id          Int     @id @default(autoincrement())
  name        String
  image       String?
  description String? @db.VarChar(1500)
  nation      String
  missions    String
}
