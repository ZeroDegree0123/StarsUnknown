// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Constellation {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?
  stars       Star[]
}

model Star {
  id                Int            @id @default(autoincrement())
  constellationName String?
  name              String
  description       String?
  distance          String
  size              String
  type              String
  constellation     Constellation? @relation(fields: [constellationName], references: [name])
  planets           Planet[]
}

model Planet {
  id          Int     @id @default(autoincrement())
  planetId    Int
  name        String
  description String?
  distance    String
  size        String
  type        String
  moons       String
  star        Star    @relation(fields: [planetId], references: [id])
}

model SpaceCraft {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  nation      String
  yearBuilt   String
  crew        String?
}

model Astronaut {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  nation      String
  missions    String
}
